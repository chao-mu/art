#!/bin/bash

set -e

FPS=60

if [ "$#" -ne 2 ]; then
    echo "Usage: `basename $0` in.trace out.mp4"
    exit
fi

IN=$1
OUT=$2

if [ ! -f $IN ]; then
    echo "Trace file not found!"
    exit
fi

# Note, we skip the first frame (i.e. -ss 0.033) because it's blank
apitrace dump-images -o - $IN |
    ffmpeg -r $FPS -f image2pipe -vcodec ppm -i pipe: \
    -ss 0.033 \
    -c:v libx264 \
    -preset slow \
    -crf 18 \
    -profile:v baseline \
    -level 3.0 \
    -movflags +faststart \
    -pix_fmt yuv420p \
    $OUT
